{# templates/pdf.html.twig #}
{# @var loanData array #}

{% extends 'base.html.twig' %}

{% block body %}

    <div class="row">
        <div class="col-12 pb-2 pt-2 pl-2 mb-2 sp-bg-primary">
            <h1 class="text-center">Loan Estimation Tool</h1>
        </div>
    </div>

    <div class="row mt-4 pl-4">
        <p><strong>Loan parameters:</strong></p>
    </div>
	
    <div class="row">
        <div class="col-1"></div>

        <div class="col-10">
            <table class="col-6 mt-2 pb-0 mb-0 table table-sm table-responsive-md table-borderless">
                <tr>
                    <td>Loan Amount:</td>
                    <td>${{ loanData.amount | number_format(2) }}</td>
                </tr>

                <tr>
                    <td>Term:</td>
                    <td>{{ loanData.term }} months</td>
                </tr>

                <tr>
                    <td>Credit score:</td> 
                    <td>{{ loanData.creditScore }}</td>
                </tr>

                <tr>
                    <td>Monthly gross income:</td> 
                    <td>${{ loanData.monthlyGrossIncome }}</td>
                </tr>
            </table>
        </div>

        <div class="col-1"></div>
    </div>

    <div class="row mt-4 pl-4">
        <p><strong>Your Estimated loan:</strong></p>
    </div>

    <div class="row">
        <div class="col-1"></div>

        <div class="col-10">
            <table class="col-6 mt-2 pb-0 mb-0 table table-sm table-responsive-md table-borderless">
                <tr>
                    <td>Loan Amount:</td>
                    <td>${{ loanData.amount | number_format(2) }}</td>
                </tr>

                <tr>
                    <td>Origination Fee:</td>
                    <td>${{ loanData.fee }}</td>
                </tr>
                    <td>Interest Rate:</td> 
                    <td>{{ loanData.interestRate }}%</td>
                <tr>

                </tr>

                <tr>
                    <td>Monthly Payment:</td> 
                    <td>${{ loanData.payment | number_format(2) }}</td>
                </tr>
            </table>
        </div>

        <div class="col-1"></div>
    </div>

    <div class="row mt-4 pl-4">
        <p><strong>Amortization</strong></p>
    </div>

    <div class="row">
        <div class="col-1"></div>

        <div class="col-10">
            <table class="table table-sm table-responsive-md table-borderless text-center">
                <thead>
                    <tr>
                        <th>Month</th>
                        <th>Principal</th>
                        <th>Interest paid</th>
                        <th>Principal paid</th>
                        <th>Total payment</th>
                    <tr>
                </thead>

                <tbody>
                {% for r in loanData.amortization %}
                    <tr>
                        <td><strong>{{ loop.index }}</strong></td>
                        <td>${{ r.principal | number_format(2) }}</td>
                        <td>${{ r.interestPayment | number_format(2) }}</td>
                        <td>${{ r.principalPayment | number_format(2) }}</td>
                        <td>${{ r.totalPayment | number_format(2) }}</td>
                    </tr>
                {% endfor %}
                </tbody>
            </table>
        </div>

        <div class="col-1"></div>
    </div>

{% endblock %}
